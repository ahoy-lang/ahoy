? Test all new features of Ahoy
import "stdio.h"

? Word-based operators with semicolons
x: 10; y: 5

sum: x plus y; diff: x minus y; product: x times y
quotient: x div y; remainder: x mod y

ahoy|"10 plus 5 = %d\n", sum|; ahoy|"10 minus 5 = %d\n", diff|
ahoy|"10 times 5 = %d\n", product|
ahoy|"10 div 5 = %d\n", quotient|; ahoy|"10 mod 5 = %d\n", remainder|

? Comparison words
if x greater_than y then
    ahoy|"x is greater than y\n"|

if y lesser_than x then
    ahoy|"y is lesser than x\n"|

? Dynamic arrays
my_array: <100, 200, 300, 400>
ahoy|"Array first element: %d\n", my_array<0>|
ahoy|"Array last element: %d\n", my_array<3>|

? Python-like dictionaries
my_dict: {"name":"Ahoy", "version":2, "active":true}
ahoy|"Dict name: %s\n", my_dict{"name"}|
ahoy|"Dict version: %d\n", my_dict{"version"}|

? Compile-time when block
when DEBUG then
    ahoy|"DEBUG mode is enabled\n"|
