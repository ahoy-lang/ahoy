? # Test file with no indentation to test formatter

greet :: |name:string|:
    ahoy|"Hello, " + name|
$ ? new end syntax

add :: |a:int, b:int| int:
    result: a + b
    return result
$

check_positive :: |num:int|:
    if num > 0 then
        ahoy|"Positive"|
   $
$

classify :: |num:int|:
  if num > 0: ahoy|"Positive"|
  anif num greater_than 0: ahoy|"Negative"|
  else: ahoy|"Zero"|
  $
$

count :: |max:int|:
  loop i to max do
      ahoy|i|
  $
$

test_switch :: |value:int|:
  switch value on
      1: ahoy|"One"|
      2: ahoy|"Two"|
      3: ahoy|"Three"|
      _: ahoy|"Other"|
	$
$

nested :: |x:int|:
	if x > 0:
    loop i to x do
      ahoy|i|
    $
  $
$

quick_check :: |value:int|:
    if value > 0 then ahoy|"Positive"|
end

quick_loop :: |max:int|:
    loop i to max do ahoy|i|
end

